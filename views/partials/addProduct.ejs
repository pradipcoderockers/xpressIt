<div class="wrapper">

    <%- include innerHeader.ejs %>
        <div class="text-center loginscreen animated fadeInDown">
            <div>
                <div class="row">


                    <div class="col-md-12 text-center">
                        <img src="img/fxt_logo.jpg" class="logo">
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-12">
                        <h2 class="bold">Tell Us About Each Product</h2>
                    </div>
                </div>
                <form name="addProductProviderForm" class="m-t" role="form" novalidate ng-submit="!addProductProviderForm.$valid||AddProductCtrl.addMoreProduct()" ng-if="!AddProductCtrl.showEditForm ">
                    <div class="row">

                        <div class="col-md-offset-4 col-md-4 col-lg-4 text-center">


                            
                            <div class="form-group">
                                    <label class="bold"> Select Category
                                        </label>
                                 <select  ng-options="value.path for value in AddProductCtrl.categoryListing" class="form-control maincats" ng-model="AddProductCtrl.itemData.category" ng-change="AddProductCtrl.getSubcategory(AddProductCtrl.itemData.category.categoryId)"></select>


                                      
                                                              </div>
                            
                            <div class="form-group">
                                    <label class="bold"> Select Subcategory
                                        </label>
                                <select  ng-options="value.path for value in AddProductCtrl.subCategoryListing" class="form-control maincats" ng-model="AddProductCtrl.itemData.subcategory"></select>
                                

                                      
                                                              </div>


                            <div class="form-group">
                                    <label class="bold"> Item Name
                                        </label>
                                <input type="text" class="form-control" placeholder="Item Name" ng-required="true" name="itemName" ng-model="AddProductCtrl.itemData.name">
                            </div>

                            <div ng-if="addProductProviderForm.itemName.$error.required && AddProductCtrl.submitted">
                                <div class="errors">Please enter item name.</div>
                            </div>

                            <div class="form-group">
                                    <label class="bold"> Item Price
                                        </label>
                                <input type="text"  class="form-control" placeholder="Item Price" ng-required="true" name="itemPrice" ng-model="AddProductCtrl.itemData.price" currency>
                            </div>

                            <div ng-if="addProductProviderForm.itemPrice.$error.required && AddProductCtrl.submitted">
                                <div class="errors">Please enter item price.</div>
                            </div>
                            <div class="form-group">
                                    <label class="bold"> Item Description
                                        </label>
                                <input type="text" class="form-control" placeholder="Item Description" ng-required="true" name="itemDescription" ng-model="AddProductCtrl.itemData.description">
                            </div>

                            <div ng-if="addProductProviderForm.itemDescription.$error.required && AddProductCtrl.submitted">
                                <div class="errors">Please enter item description.</div>
                            </div>

                            <div class="form-group">
                                <div class="row border-bottom-gray margin-left-10 margin-right-10 margin-bottom-10">
                                    <div class="col-sm-12 text-left">
                                        <h3>Select Image</h3>
                                    </div>
                                </div>
                                <div ng-if="AddProductCtrl.itemData.file">
                                    <img ng-src="{{AddProductCtrl.itemData.file.$ngfBlobUrl}}" class="profileImageBlock">
                                </div>
                                <div class="text-center text-danger" ng-if="vendorCtrl.fileRequired">
                                    Please select image
                                </div>
                                <button class="btn btn-primary form-group margin-top-20" ngf-select ng-model="AddProductCtrl.itemData.file" name="file" ngf-pattern="'image/*'" ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100">
                                            Select
                                        </button>
                            </div>

                        </div>



                    </div>
                    <div class="row padding-top-20">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-primary block m-b registerButton" ng-click="AddProductCtrl.submitted=true">Add More Product
                        </button>
                        </div>
                    </div>


                </form>

                <form name="editProductProviderForm" class="m-t" role="form" novalidate ng-submit="!editProductProviderForm.$valid||AddProductCtrl.editProduct()" ng-if="AddProductCtrl.showEditForm">
                    <div class="row">
                        <div class="col-md-offset-4 col-md-4 col-lg-4 text-center">
                            <div class="form-group">
                                    <label class="bold"> Select Category
                                        </label>
                                <select  ng-options="value.path for value in AddProductCtrl.categoryListing" class="form-control maincats" ng-model="AddProductCtrl.editItemData.category" ng-change="AddProductCtrl.getSubcategory(AddProductCtrl.editItemData.category.categoryId)"></select>


                                      
                                                              </div>
                            
                            <div class="form-group">
                                    <label class="bold"> Select Subcategory
                                        </label>
                                <select  ng-options="value.path for value in AddProductCtrl.subCategoryListing" class="form-control maincats" ng-model="AddProductCtrl.editItemData.subcategory"></select>
                                

                                      
                                                              </div>
            
                           


                            <div class="form-group">
                                    <label class="bold"> Item Name
                                        </label>
                                <input type="text" class="form-control" placeholder="Item Name" ng-required="true" name="itemName" ng-model="AddProductCtrl.editItemData.name">
                            </div>

                            <div ng-if="editProductProviderForm.itemName.$error.required && AddProductCtrl.submitted">
                                <div class="errors">Please enter item name.</div>
                            </div>

                            <div class="form-group">
                                    <label class="bold"> Item Price
                                        </label>
                                <input type="text" numbers-only class="form-control" placeholder="Item Price" ng-required="true" name="itemPrice" ng-model="AddProductCtrl.editItemData.price">
                            </div>

                            <div ng-if="editProductProviderForm.itemPrice.$error.required && AddProductCtrl.submitted">
                                <div class="errors">Please enter item price.</div>
                            </div>
                            <div class="form-group">
                                    <label class="bold"> Item Description
                                        </label>
                                <input type="text" class="form-control" placeholder="Item Description" ng-required="true" name="itemDescription" ng-model="AddProductCtrl.editItemData.description">
                            </div>

                            <div ng-if="editProductProviderForm.itemDescription.$error.required && AddProductCtrl.submitted">
                                <div class="errors">Please enter item description.</div>
                            </div>

                            <div class="form-group">
                                <div class="row border-bottom-gray margin-left-10 margin-right-10 margin-bottom-10">
                                    <div class="col-sm-12 text-left">
                                        <h3>Select Image</h3>
                                    </div>
                                </div>
                                <div ng-if="AddProductCtrl.editItemData.imageLink && !AddProductCtrl.editItemData.file">
                                    <img ng-src="{{AddProductCtrl.editItemData.imageLink}}" class="profileImageBlock">
                                </div>
                                <div ng-if="AddProductCtrl.editItemData.file">
                                    <img ng-src="{{AddProductCtrl.editItemData.file.$ngfBlobUrl}}" class="profileImageBlock">
                                </div>
                                <button class="btn btn-primary form-group margin-top-20" ngf-select ng-model="AddProductCtrl.editItemData.file" name="file" ngf-pattern="'image/*'" ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100">
                                                Select
                                            </button>
                            </div>

                        </div>



                    </div>




                    <div class="col-sm-12 col-md-12">
                        <div class="row text-right">
                            <button type="submit" class="btn btn-primary block m-b registerButton" ng-click="AddProductCtrl.submitted=true">Save Changes
                                </button>

                        </div>
                    </div>
                </form>
            </div>
        </div>

<br>
<br>
<br>
<br>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-md-12">

                    <div id="allOrders" class="pre-scrollable maxh-500">
                        <div class="row">
                            <div class="col-md-6" ng-repeat="item in AddProductCtrl.items">
                                <div class="contact-box" class="no-border">
                                    <a>


                                        <div class="col-sm-10 col-md-10 ">

                                            <div class="row ">

                                                <div class="col-sm-12 col-md-12">
                                                    <h3 class="text-success">{{item.name}}</h3>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12 col-md-12">
                                                    Price: {{item.price}}
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12 col-md-12">
                                                    Description: {{item.description}}
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12 col-md-12">
                                                    Category: {{AddProductCtrl.getCategoryName(item.categoryId)}}
                                                </div>
                                            </div>


                                            <div class="clearfix"></div>
                                            <div class="clearfix"></div>


                                        </div>
                                        <div class="col-sm-2 col-md-2">
                                            <div class="text-center">
                                                <img ng-src="{{item.imageLink}}" class=" m-t-xs img-rounded">
                                            </div>
                                        </div>

                                        <div class="col-sm-12 col-md-12">
                                            <div class="row text-right">
                                                <button class="btn btn-success" ng-click="AddProductCtrl.scrollToTop(item);$event.stopPropagation()">
                                                            Edit Item
                                                        </button>
                                                <button class="btn btn-danger" ng-click="AddProductCtrl.removeProduct(item);$event.stopPropagation()">
                                                    Remove Item
                                                </button>

                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>


</div>